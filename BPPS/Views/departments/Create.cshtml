@model BPPS.Models.departments

@{
    ViewBag.Title = "Create";
}   

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()        
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2><strong>Departments in Siemens</strong></h2>
                </div>
               
                <div class="modal-body">

        <div class="form-horizontal">
            <h3><strong>Create new department</strong></h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">)
                <div class="col-md-10">
                    <p> <strong> Department ID: </strong> </p>
                    @Html.EditorFor(model => model.department_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.department_id, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <p> <strong> Locaton: </strong> </p>
                    @Html.DropDownList("location_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.location_id, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <p> <strong> New department name: </strong> </p>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-10">
                    <p> <strong> Sub-department: </strong> </p>
                    @Html.DropDownList("dep_department_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.dep_department_id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">
                            <span class="glyphicon glyphicon-share"></span>
                            Close
                        </button>
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-check"></span>
                            Create
                        </button>
                        <!--<input type="submit" value="Create" class="btn btn-success" />-->
                    </div>
                </div>
            </div>

            </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    }
