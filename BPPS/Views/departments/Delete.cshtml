@model BPPS.Models.departments

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Department</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Department:")
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>
            
        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>
    
            <dt>
                @Html.DisplayName("Location (town):")
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.locations.town)
            </dd>
            
        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>
    
            <dt>
                @Html.DisplayName("Sub-department:")
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.departments2.name)
            </dd>
            
        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>

            <dt>
                @Html.ActionLink("Back to List", "Index", "", new{@class = "btn btn-warning"})
            </dt>
            <dd>
                 <input type="submit" value="Delete" class="btn btn-danger" />
            </dd>
    
        </dl>
        
    </div>
    }
</body>
</html>
