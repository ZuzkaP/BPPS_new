    <div class="col-md-4">
        <h1> Vitajte </h1>
        @if (@TempData["message"] != null)
        {
            <div class="alert alert-success">
                <b>Success: </b>@TempData["message"]
            </div>
        }
        @if (@TempData["SuccMsg"] != null)
        {
            <div class="alert alert-success">
                <b>Success: </b>@TempData["SuccMsg"]
            </div>
        }
        @if (ViewBag.hasNewFeedbacks)
        {
            <h4> Máte nové nevyplnené feedbacky: </h4> <br>
            <div class="table-responsive">
                <table class="table newFeedbackTable">
                    <tr class="thRow">
                        <th> Feedback initiated </th>
                        <th> Project acronym </th>
                        <th> Project name </th>
                        <th> </th>
                    </tr>
                    @foreach (var feedbacks in ViewBag.newFeedbacks)
                {
                        <tr>
                            <td> @feedbacks.initiated </td>
                            <td> @feedbacks.Projects.acronym </td>
                            <td> @feedbacks.Projects.name </td>
                            <td>
                                <!--@Html.ActionLink("v y p l n i ť", "FeedbackForm", "feedback_questions",
