@model BPPS.Models.feedbacks

@{
    ViewBag.Title = "Delete";
}
  @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
<h2>Delete</h2>

<h3>Are you sure you want to delete this feedback?</h3>
<div>
    <hr />
    <div class="row">
    <div class="col-sm-2">
            @Html.ActionLink("NO (back)", "", "", "", new { @class = "btn btn-warning btn-block", href = Request.UrlReferrer})
    </div>
    <div class="col-sm-2">
            <button type="submit" class="btn btn-danger btn-block">
                <span class="glyphicon glyphicon-trash"></span> 
                YES (delete)
            </button>
            <!--<input type="submit" value="YES (delete)" class="btn btn-danger btn-block" />--> 
        </div>
        </div>
</div>
}