@model BPPS.Models.questions

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4> <strong> Create question for partner </strong></h4>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="modal-body">
                <p> <strong> Question: </strong> </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.question, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
                </div>
                <p> &nbsp</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <span class="glyphicon glyphicon-share"></span>
                    Close
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-check"></span>
                    Create
                </button>
                    <!--<input type="submit" value="CreatePartner" class="btn btn-success" />-->
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
